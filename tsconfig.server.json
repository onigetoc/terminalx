{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/components/Terminal/server/**/*"]
}